{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Simon Hoyos <shmesa23@gmail.com> (https://www.linkedin.com/in/simonhoyos)",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install backend/.husky",
    "prebuild": "rimraf ./build",
    "build": "tsc -p .",
    "start": "node ./src/server.ts",
    "dev": "nodemon ./src/server.ts",
    "debug": "nodemon --exec 'node --inspect --require ts-node/register ./src/server.ts'",
    "test": "jest",
    "test:watch": "yarn test --watchAll",
    "test:coverage": "yarn test:watch --coverage",
    "lint": "eslint --ext js,ts ./src",
    "format": "prettier --write ./src",
    "clean": "rimraf node_modules"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
